            <link rel="stylesheet" href="{{asset ('bundles/communs/template/css/AdminLTE.css')}}">
            <style>
                .navigation {
                    margin: 0;
                    padding: 0;
                    list-style: none;
                    color: #fff;
                    font: 1.2em "Trebuchet MS", sans-serif;
                }
                .navigation a, .navigation span {
                    display: block;
                    padding: 4px 10px;
                    color: #fff;
                    text-decoration: none;
                }

