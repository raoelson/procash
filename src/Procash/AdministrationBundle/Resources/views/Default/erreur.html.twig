{% extends '::base.html.twig' %}

{% block meta %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
{% endblock %}
{% block title %}
    {{ parent() }} - {{ 'errorpage.title'|trans({}, "erreur", app.request.locale) }} !
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        div.menu,div.sous-menu{
            display: none;
        }
        div.separateur{
            top:0px !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row-border">
            <div id="icon-erreur" class="col-xs-2 col-sm-2"></div>
            <div id="h-erreur" class="col-lg-3 col-md-3">
                <h3 class="ellipsis" style="color:red"> Error 404 !</h3>
            </div>
            <div class="col-lg-6 col-md-6">
                <h3 class="ellipsis"><i style="color:red;" class="mdi-action-report-problem"></i>&nbspOops! Page web introuvable</h3>
                <div class="row-border">
                    <div class="col-lg-12 col-md-12">
                        <p>Il se peut que vous n'ayez pas le privilège d'accéder à cette page ou elle n'existe pas</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}